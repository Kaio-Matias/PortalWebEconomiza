@page
@model PortalWebEconomiza.Pages.HistoricoModel
@{
    ViewData["Title"] = "Histórico de Consultas";
}

<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>
    <p>Visualize as consultas salvas filtrando por data.</p>
</div>

<div class="row justify-content-center my-4">
    <div class="col-md-6">
        <form method="get">
            <div class="input-group">
                <input asp-for="DataFiltro" class="form-control" />
                <button type="submit" class="btn btn-primary">Filtrar</button>
            </div>
        </form>
    </div>
</div>

@if (Model.Consultas.Any())
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Produto (SEFAZ)</th>
                <th>GTIN</th>
                <th>Valor Venda</th>
                <th>Data Venda</th>
                <th>Estabelecimento</th>
                <th>Município</th>
                <th>Data da Consulta</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var reg in Model.Consultas)
            {
                <tr>
                    <td>@reg.DescricaoSefaz</td>
                    <td>@reg.Gtin</td>
                    <td>@reg.ValorVenda.ToString("C")</td>
                    <td>@reg.DataVenda.ToString("dd/MM/yyyy")</td>
                    <td>@reg.NomeFantasia</td>
                    <td>@reg.Municipio</td>
                    <td>@reg.DataConsulta.ToString("g")</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info text-center">
        Nenhuma consulta encontrada para a data selecionada.
    </div>
}